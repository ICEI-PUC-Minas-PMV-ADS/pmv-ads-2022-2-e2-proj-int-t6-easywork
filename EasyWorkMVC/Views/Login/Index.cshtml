@model LoginModel

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" href="assets/headcp.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap"
          rel="stylesheet" />
    <script>
        function mensagem() {
            alert("Seja bem-vindo ao Easy Work");
        }
    </script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/main.css" />

    <title>Easy Work - Login</title>
</head>
<!-- HEADER -->
<body>
    <div id="header">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">
                <!-- IMAGEM LOGO-->
                <a onclick="mensagem()" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/assets/Logotp.png"
                         alt="img-logo"
                         class="img-fluid"
                         width="170px" />
                </a>
                <!--//IMAGEM LOGO-->
                <!-- BOTÃO DE RESPANSIVIDADE -->
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNav"
                        aria-controls="navbarNav"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- //BOTÃO DE RESPANSIVIDADE -->
                <!-- INICIO DA LISTA CABEÇALHO -->
                <div class="collapse navbar-collapse justify-content-end"
                     id="navbarNav">
                    <ul class="navbar-nav">
                    </ul>
                    <!-- //FIM LISTA CABEÇALHO -->
                </div>
            </nav>
        </div>
    </div>
    <!-- HEADER -->
    <!-- Conteúdo -->
    <main>
        </br>
        <div class="container mt-3 mb-3">
            <div class="row">
                <p class="text-center textini">
                    Encontre profissionais da construção civil na cidade de São Paulo. A
                    <b id="easy">Easy</b> <b id="work">Work</b> tem em sua concepção o
                    aquecimento do setor da construção civil na cidade de São Paulo,
                    unindo os profissionais da área com os potenciais clientes. Além
                    disso, proporcionar conteúdos importantes para os profissionais da
                    área.
                </p>
            </div>
        </div>
        </br>

        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
                @TempData["MensagemErro"]
            </div>
        }

        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success" role="alert">
                <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
                @TempData["MensagemSucesso"]
            </div>
        }

        <div class="LoginInicio">
            <form asp-controller="Login" asp-action="Entrar" method="post">
                <div class="mb-3">
                    <label for="login" class="form-label">Login</label>
                    <input type="text" asp-for="Login" class="form-control" id="login" placeholder="Digite seu nome de usuário">
                    @Html.ValidationMessageFor(x => x.Login)
                </div>
                <div class="mb-3">
                    <label for="senha" class="form-label">Senha</label>
                    <input type="password" asp-for="Senha" class="form-control" id="senha" placeholder="Digite sua senha">
                    @Html.ValidationMessageFor(x => x.Senha)
                </div>

                <p class="mb-4 text-sm mx-auto">
                    Esqueceu sua senha?
                    <a asp-action="RedefinirSenha" asp-controller="Login" class="text-primary text-gradient font-weight-bold">Redefinir minha senha</a>
                </p>

                <button type="submit" class="btn btn-primary">Entrar</button>

                <a class="btn btn-primary" role="button" asp-controller="Usuario" asp-action="Criar">cadastrar</a>
            </form>
        </div>


    </main>
    <!-- Conteúdo -->
    <!--Rodapé -->

    <footer id="rodape" class="py-3">
        <ul class="nav justify-content-center border-bottom pb-3">
            <li class="nav-item"><a href="#" class="nav-link px-2">Contato</a></li>
        </ul>
        <p class="text-center">© 2022 Copyright</p>
    </footer>
    <!--//Rodapé -->
    <!-- Optional JavaScript; choose one of the two! -->
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    -->
</body>
</html>

@model List<ContatoModel>

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" href="assets/headcp.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap"
          rel="stylesheet" />
    <script>
        function mensagem() {
            alert("Seja bem-vindo ao Easy Work");
        }
    </script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.min.css" />

    <title>Easy Work - Página Inicial</title>
</head>
<!-- HEADER -->
<body>
    <div id="header">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">
                <!-- IMAGEM LOGO-->
                <a onclick="mensagem()" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/assets/Logotp.png"
                         alt="img-logo"
                         class="img-fluid"
                         width="170px" />
                </a>
                <!--//IMAGEM LOGO-->
                <!-- BOTÃO DE RESPANSIVIDADE -->
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNav"
                        aria-controls="navbarNav"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- //BOTÃO DE RESPANSIVIDADE -->
                <!-- INICIO DA LISTA CABEÇALHO -->
                <div class="collapse navbar-collapse justify-content-end"
                     id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Seguranca_epi" asp-action="Index">Segurança e EPI</a>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Leistrab" asp-action="Index">Leis Trabalhistas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Profissionais" asp-action="Index">Profissionais</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Cursos_e_materiais" asp-action="Index">Cursos e Materiais</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Index">Usuários</a>
                        </li>
                    </ul>
                    <!-- //FIM LISTA CABEÇALHO -->
                </div>
            </nav>
        </div>
    </div>
    <!-- HEADER -->
    <!-- Conteúdo -->
    <main>

        <div class="text-center">

            <div class=@*"d-grid gap-2 d-md-flex justify-content-md-start"*@>
                <a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Criar">Adicionar novo contato</a>
            </div>

            @*<div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">x</button>
            This is a success alert—check it out!
        </div>

        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">x</button>
            This is a danger alert—check it out!
        </div>*@

            <h1 class="display-4">Listagem de Contatos</h1>

            <table class="table" id="table-contatos">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nome</th>
                        <th scope="col">E-mail</th>
                        <th scope="col">Celular</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (ContatoModel contato in Model)
                        {
                            <tr>
                                <th scope="row">@contato.Id</th>
                                <td>@contato.Nome</td>
                                <td>@contato.Email</td>
                                <td>@contato.Celular</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a role="button" class="btn btn-primary" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Editar">Editar</a>
                                        <a role="button" class="btn btn-danger" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="ApagarConfirmacao">Apagar</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>


    </main>
    <!-- Conteúdo -->
    <!--Rodapé -->

    <footer id="rodape" class="py-3">
        <ul class="nav justify-content-center border-bottom pb-3">
            <li class="nav-item">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link px-2">Página Inicial</a>
            </li>
            <li class="nav-item"><a href="#" class="nav-link px-2">Contato</a></li>
            <li class="nav-item">
                <a href="#" class="nav-link px-2">Voltar ao Topo</a>
            </li>
        </ul>
        <p class="text-center">© 2022 Copyright</p>
    </footer>

    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.min.js"></script>

    <script src="/js/Script.js"></script>

    <!--//Rodapé -->

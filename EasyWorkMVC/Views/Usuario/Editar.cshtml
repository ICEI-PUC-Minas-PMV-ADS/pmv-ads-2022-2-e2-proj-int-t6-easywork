@using EasyWorkMVC.Enums
@model UsuarioModel

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" href="assets/headcp.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap"
          rel="stylesheet" />
    <script>
        function mensagem() {
            alert("Seja bem-vindo ao Easy Work");
        }
    </script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/main.css" />

    <title>Easy Work - Página Inicial</title>
</head>
<!-- HEADER -->
<body>
    <div id="header">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">
                <!-- IMAGEM LOGO-->
                <a onclick="mensagem()" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/assets/Logotp.png"
                         alt="img-logo"
                         class="img-fluid"
                         width="170px" />
                </a>
                <!--//IMAGEM LOGO-->
                <!-- BOTÃO DE RESPANSIVIDADE -->
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNav"
                        aria-controls="navbarNav"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- //BOTÃO DE RESPANSIVIDADE -->
                <!-- INICIO DA LISTA CABEÇALHO -->
                <div class="collapse navbar-collapse justify-content-end"
                     id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Seguranca_epi" asp-action="Index">Segurança e EPI</a>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Leistrab" asp-action="Index">Leis Trabalhistas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Profissionais" asp-action="Index">Profissionais</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Cursos_e_materiais" asp-action="Index">Cursos e Materiais</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Contato" asp-action="Index">Contato</a>
                        </li>
                    </ul>
                    <!-- //FIM LISTA CABEÇALHO -->
                </div>
            </nav>
        </div>
    </div>
    <!-- HEADER -->
    <!-- Conteúdo -->
    <main>

        <div class="text-center">
            </br>
            <h1 class="display-4">Editar Usuário</h1>

        </div>

        <div class="LoginInicio">
            <form asp-controller="Usuario" asp-action="Alterar" method="post">

                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label for="nome">Nome</label>
                    <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do usuário">
                    @Html.ValidationMessageFor(x => x.Nome)
                </div>
                </br>
                <div class="form-group">
                    <label for="email">E-mail</label>
                    <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail do usuário">
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
                </br>
                <div class="form-group">
                    <label for="nome">Login</label>
                    <input type="text" asp-for="Login" class="form-control" placeholder="Digite o login do usuário">
                    @Html.ValidationMessageFor(x => x.Login)
                </div>
                </br>
                <div class="form-group">
                    <label for="nome">Perfil</label>
                    <select asp-for="Perfil" class="form-control">
                        <option value="">Selecione</option>
                        <option value="@PerfilEnum.Admin">Administrador</option>
                        <option value="@PerfilEnum.Padrao">Padrão</option>
                    </select>
                    @Html.ValidationMessageFor(x => x.Perfil)
                </div>
                </br>
                <button type="submit" class="btn btn-primary">Editar</button>
                <a class="btn btn-secondary" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
            </form>
        </div>

    </main>
    <!-- Conteúdo -->
    <!--Rodapé -->

    <footer id="rodape" class="py-3">
        <ul class="nav justify-content-center border-bottom pb-3">
            <li class="nav-item">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link px-2">Página Inicial</a>
            </li>
            <li class="nav-item"><a href="#" class="nav-link px-2">Contato</a></li>
            <li class="nav-item">
                <a href="#" class="nav-link px-2">Voltar ao Topo</a>
            </li>
        </ul>
        <p class="text-center">© 2022 Copyright</p>
    </footer>
    <!--//Rodapé -->
    <!-- Optional JavaScript; choose one of the two! -->
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
